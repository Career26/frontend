{
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build", "dist"],
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "target": "es5",
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@slices/*": ["./src/state/slices/*"],
      "@state/*": ["./src/state/*"],
      "@shared/*": ["./src/shared/*"],
      "@mocks/*": ["./src/mocks/*"]
    }
  }
}
