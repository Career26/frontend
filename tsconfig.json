{
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build", "dist"],
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "es2017",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "noEmitOnError": true,
    "paths": {
      "@slices/*": ["./src/state/slices/*"],
      "@state/*": ["./src/state/*"],
      "@shared/*": ["./src/shared/*"],
      "@mocks/*": ["./src/mocks/*"],
      "@careersTest/*": ["./src/features/careersTest/*"]
    }
  }
}
